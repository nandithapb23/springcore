<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
            
             <bean class="springcore.Teacher" id="teacher">
             <property name="subject" value="social"></property>
             <property name="salary" value="30000"></property>
             </bean>
             
             <bean class="springcore.Student" id="student">
             <property name="name" value="hruday"></property>
             <property name="fees" value="20000"></property>
             <property name="teacher" ref="teacher"></property>
             </bean>
            
            </beans>